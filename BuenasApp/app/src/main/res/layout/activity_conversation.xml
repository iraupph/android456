<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/conversation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <RelativeLayout
        android:id="@+id/conversation_input_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".1"
            android:background="@android:color/black"/>

        <ImageButton
            android:id="@+id/conversation_send"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_send"/>

        <EditText
            android:id="@+id/conversation_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/conversation_send"
            android:layout_toStartOf="@id/conversation_send"
            android:gravity="start"
            android:hint="@string/conversation_input_hint"
            android:inputType="text"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

    <!-- Pra esconder a linha que divide os itens, usa @null -->
    <!-- stackFromBottom e transcriptMode faz adicionar os itens de baixo pra cima -->
    <ListView
        android:id="@+id/conv_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/conversation_input_parent"
        android:layout_below="@id/conversation_toolbar"
        android:divider="@null"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"/>

</RelativeLayout>
